#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build module-init-tools-host

export INSTALL=$(kernel_path)
$SCRIPTS/install busybox-initramfs

#[ "$BUSYBOX_STATIC" = "no" ] && \
#  $SCRIPTS/install uClibc initramfs

unset LDFLAGS

cd $(kernel_path)
rm -rf modules
mkdir -p modules

make modules
make INSTALL_MOD_PATH=modules DEPMOD="$ROOT/$TOOLCHAIN/bin/depmod" modules_install
rm -f modules/lib/modules/*/build
rm -f modules/lib/modules/*/source

make bzImage

