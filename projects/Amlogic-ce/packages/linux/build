#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build module-init-tools

export INSTALL=$(kernel_path)
$SCRIPTS/install busybox initramfs

unset LDFLAGS
DEPMOD=`ls -d $ROOT/$BUILD/module-init-tool*/depmod`

cd $(kernel_path)
rm -rf modules
mkdir -p modules

make modules
make INSTALL_MOD_PATH=modules DEPMOD=$DEPMOD modules_install
rm -f modules/lib/modules/*/build
rm -f modules/lib/modules/*/source

make bzImage
